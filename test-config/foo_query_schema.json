{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "size": {
      "type": "number",
      "description": "Number of records to fetch",
      "minimum": 1,
      "maximum": 1000
    },
    "page": {
      "type": "number",
      "description": "Current page number",
      "minimum": 1,
      "maximum": 5
    }
  },
  "required": ["size", "page"]
}
